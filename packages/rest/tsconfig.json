{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "outDir": "./lib/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "module": "es2015",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "es2015.promise", "dom"]
  },
  "include": [
    "src",
    "typings"
  ]
}
